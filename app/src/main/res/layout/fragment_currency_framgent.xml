<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CurrencyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fromCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/changeSwap"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="120dp"
                android:minWidth="120dp"
                android:id="@+id/containerClickFrom"
                android:minHeight="60dp"
                android:layout_height="wrap_content"
                >



                <Spinner
                    android:id="@+id/spinnerFrom"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/arrowFrom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_13sdp"
                    android:textAlignment="center"
                    android:hint="@string/from"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/arrowFrom"
                    android:id="@+id/valueSelectedFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginEnd="10dp"
                    app:tint="@color/black"
                    android:id="@+id/arrowFrom"
                    app:srcCompat="@drawable/ccp_ic_arrow_drop_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fromCard"
            app:layout_constraintBottom_toBottomOf="@id/fromCard"
            android:layout_width="wrap_content"
            app:tint="@color/black"
            android:id="@+id/changeSwap"
            app:srcCompat="@android:drawable/arrow_down_float"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toCard"
            app:layout_constraintStart_toEndOf="@+id/changeSwap"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="120dp"
                android:minWidth="120dp"
                android:id="@+id/containerClickTo"
                android:minHeight="60dp"
                android:layout_height="wrap_content"
                >



                <Spinner
                    android:id="@+id/spinnerTo"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/arrowTo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="@dimen/_13sdp"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:hint="@string/to"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/arrowTo"
                    android:id="@+id/valueSelectedCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginEnd="10dp"
                    app:tint="@color/black"
                    android:id="@+id/arrowTo"
                    app:srcCompat="@drawable/ccp_ic_arrow_drop_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fromCardEdit"
            app:layout_constraintEnd_toEndOf="@id/fromCard"
            app:layout_constraintStart_toStartOf="@+id/fromCard"
            app:layout_constraintTop_toBottomOf="@+id/fromCard"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/fromEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:text="1"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toCardEdit"
            app:layout_constraintEnd_toEndOf="@id/toCard"
            app:layout_constraintStart_toStartOf="@+id/toCard"
            app:layout_constraintTop_toBottomOf="@+id/toCard"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            app:cardBackgroundColor="@color/card_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <EditText
                android:id="@+id/toEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detailsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toCardEdit"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:backgroundTint="@color/blue"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>